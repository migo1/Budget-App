<%= render "header" %>


<ul id="categories" class="px-2">
  <% @categories.each do |category| %>
  <li class=" px-2 border-2 border-gray-300 mb-2 bg-white">

    <a href="<%= category_path(category) %>" >
            <%= render category %>
          </a>
    </li>
  <% end %>
</ul>

<footer class="mt-auto flex justify-center bg-green-500 py-3 text-white text-center px-2">
  <%= link_to "New category", new_category_path, class: "border-2 border-white py-2 w-full font-bold" %>
</footer>