<%= render "header" %>


  <div class=" px-2 border-2 border-gray-300 mb-2 bg-white drop-shadow-lg"></li>

            <%= render @category %>
         
    </div>

    <ul class="px-2">
  <% @category.purchases.each do |purchase| %>
   <a href="<%= category_purchase_path(@category, purchase) %>" >
    <li class="py-3 bg-white flex justify-between px-2 mb-2">
      <div>
        <p class="font-bold">
          <%= purchase.name %>
        </p>
        <p class="text-gray-500 text-sm">
          <%= purchase.created_at.strftime("%d %b %Y")  %>
        </p>
      </div>
      <p >
         $<%= purchase.amount %>
      </p>
    </li>
    </a>
  <% end %>
</ul>

  <footer class="flex flex-col justify-center text-white text-center px-2 w-full">
  <%= link_to "New Purchase", new_category_purchase_path(@category), class: "py-3 mb-2 bg-green-500" %>
  <%= link_to "Edit this category", edit_category_path(@category), class: "py-3 mb-2 bg-blue-500" %>

  <%= button_to "Destroy this category", @category, method: :delete, class: "py-3 mb-2 bg-red-500 w-full" %>
  </footer>
